<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraint_thuthach"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".ThuThachActivity">


    <TextView
        android:id="@+id/title_thuthach_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Thử thách "
        android:textColor="#03a9f4"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_thu_thach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/anhdaidien_thuthach_imageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="launchActivityProfile"
        android:src="@drawable/avatar"
 />
</androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/sinhmang_image"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_heart_on"
        app:layout_constraintStart_toStartOf="@+id/title_thuthach_textview"
        app:layout_constraintTop_toBottomOf="@+id/title_thuthach_textview" />


    <TextView
        android:id="@+id/so_mang_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X5"
        android:layout_marginTop="10dp"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/sinhmang_image"
        app:layout_constraintTop_toTopOf="@+id/sinhmang_image" />

    <ImageView
        android:id="@+id/credit_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/credit_thuthach_textview"
        app:layout_constraintTop_toBottomOf="@+id/cardView_thu_thach" />

    <TextView
        android:id="@+id/credit_thuthach_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="500"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/iconCredit"
        app:layout_constraintTop_toBottomOf="@+id/cardView_thu_thach" />

    <ImageView
        android:id="@+id/iconCredit"
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_thu_thach"
        app:srcCompat="@drawable/icon_credit" />

    <TextView
        android:id="@+id/stt_cauhoi_thuthach_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Câu hỏi số 1:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/sinhmang_image"
        app:layout_constraintTop_toBottomOf="@+id/title_thuthach_textview" />

    <TextView
        android:id="@+id/quiz_thuthach_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Lorem ipsum dolor sit amet  dsfjkhsiuwer dsfsd"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stt_cauhoi_thuthach_textview" />

    <TextView
        android:id="@+id/countdown_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="00"
        android:textAlignment="center"
        android:textColor="#03A9F4"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/quiz_thuthach_textview"
        app:layout_constraintStart_toStartOf="@+id/quiz_thuthach_textview"
        app:layout_constraintTop_toBottomOf="@+id/quiz_thuthach_textview" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:progressTint="#00BCD4"
        app:layout_constraintEnd_toEndOf="@+id/ButtonA"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/ButtonA"
        app:layout_constraintTop_toBottomOf="@+id/countdown_textView" />

    <Button
        android:id="@+id/ButtonA"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_btn_thu_thach"
        android:onClick="ChonA"
        android:text="A. abc"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <Button
        android:id="@+id/ButtonB"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="B. abc"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_btn_thu_thach"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/ButtonA"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/ButtonA"
        app:layout_constraintTop_toBottomOf="@+id/ButtonA" />

    <Button
        android:id="@+id/ButtonC"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="C. abc"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_btn_thu_thach"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/ButtonB"
        app:layout_constraintStart_toStartOf="@+id/ButtonB"
        app:layout_constraintTop_toBottomOf="@+id/ButtonB" />

    <Button
        android:id="@+id/ButtonD"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="D. abc"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_btn_thu_thach"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/ButtonC"
        app:layout_constraintStart_toStartOf="@+id/ButtonC"
        app:layout_constraintTop_toBottomOf="@+id/ButtonC" />

    <ImageView
        android:id="@+id/khangia_trogiup_thuthach"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:src="@drawable/icon_help_50_50"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/ButtonD"
        app:layout_constraintTop_toBottomOf="@+id/ButtonD"
         />

    <ImageView
        android:id="@+id/goidiennguoithan_thuthach"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:visibility="invisible"
        android:src="@drawable/icon_help_phone"
        app:layout_constraintStart_toEndOf="@+id/khangia_trogiup_thuthach"
        app:layout_constraintTop_toBottomOf="@+id/ButtonD" />

    <ImageView
        android:id="@+id/muacredit_thuthach"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_credit"
        app:layout_constraintStart_toEndOf="@+id/button_50_50_thuthach"
        app:layout_constraintTop_toBottomOf="@+id/ButtonD" />

    <ImageView
        android:id="@+id/button_50_50_thuthach"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_help_50_50"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/goidiennguoithan_thuthach"
        app:layout_constraintTop_toBottomOf="@+id/ButtonD" />


</androidx.constraintlayout.widget.ConstraintLayout>